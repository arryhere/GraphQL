{
    "compilerOptions": {
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "target": "ESNext",
      "outDir": "./dist",
      "checkJs": true,
      "strict": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "noEmit": true,
      "removeComments": true
    },
    "include": ["src/**/*", "test/**/*"],
    "exclude": ["node_modules", "dist"]
  }